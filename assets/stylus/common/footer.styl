$footer_height = 200px;

footer {
    position: relative;
    top: 0;
    z-index: 1;
    width: 100%;
    height: $footer_height;
    background: $theme3;

    &>.wrap {
        width: $pc_width;
        height: 100%;
        vCentering(Justify: flex-start);
        margin: 0 auto;
        padding: 7.5rem 0;

        &>.logo_wrap {
            hCentering();
            margin: 0 3rem;
            user-select: none;

            &>.logo {
                height: 48px;
            }
        }

        &>.copyright {
            width: 100%;
            height: 100%;
            hCentering(Align: flex-start);
            margin-left: 1rem;

            &>.text_wrap {
                margin-bottom: 0.5rem;

                &>.text {
                    font-weight: 400;
                    font-size: 1.1rem;
                    font-family: 'Roboto';
                    letter-spacing: 2px;
                    color: $theme2;

                    &>span {
                        font: inherit;
                        font-family: 'Roboto';
                        margin: 0 0.5rem;
                    }

                    &>a {
                        color: inherit;
                        font: inherit;
                        margin: 0 0.5rem;
                    }
                }

                &:last-of-type {
                    margin-bottom: 0;
                }
            }
        }
    }
}

@media screen and (max-width: $pc_width) {
    body>footer {
        width: 100vw;
        height: 100%;

        &>.wrap {
            width: 100%;
            padding: 4rem 0;
            hCentering();

            &>.logo_wrap {
                margin: 0;
                margin-bottom: 2.5rem;
            }

            &>.copyright {
                margin: 0;
                hCentering();
            }
        }
    }
}